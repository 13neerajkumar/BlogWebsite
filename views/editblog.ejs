<%- include('./partials/header') %>
<%- include('./navbar') %>

<div class="container">
    <form action="/edit/<%= blog._id %>" method="POST">
        <div class="col-12 mt-3 ">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Edit Blog</h4>
                <form class="forms-sample">
                  <div class="form-group mt-3">
                    <label for="exampleInputName1">Blog Title</label>
                    <input type="text" value="<%= blog.title %>" class="form-control" name="title" placeholder="Enter tilte" required>
                  </div>
                
                  <div class="form-group mt-3">
                    <label for="exampleTextarea1">Textarea</label>
                    <textarea class="form-control" rows="4" name="content" placeholder="Enter blog content" required><%= blog.content %></textarea>
                  </div>

                  <button type="submit" class="btn btn-warning mr-2  mt-3">Update Blog</button>
                  <button class="btn btn-light mt-3">Cancel</button>
                </form>
              </div>
            </div>
          </div>
    </form>
</div>


